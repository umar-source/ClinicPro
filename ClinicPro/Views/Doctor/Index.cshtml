@model List<DoctorViewModel>


<div>
    <a asp-action="Create" class="btn btn-secondary   text-white">Create Doctor</a>
</div>


    <table class="table">
        <thead>
   <tr>
            <th>FullName</th>
            <th>Gender</th>
            <th>DateOfBirth</th>
            <th>ContactNumber</th>
            <th>Email</th>
            <th>Address</th>
   </tr>
        </thead>
        <tbody>
        @foreach(var doctor in Model)
        {
            <tr>
                <td>@doctor.FullName</td>
                <td>@doctor.Gender</td>
                <td>@doctor.DateOfBirth</td>
                <td>@doctor.ContactNumber</td>
                <td>@doctor.Email</td>
                <td>@doctor.Address</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@doctor.DoctorId" class="btn btn-info">Edit</a>
                </td>
                <td>
                    <a href="@Url.Action("Delete", "Doctor" , new { id=doctor.DoctorId })" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this doctor?')">Delete</a>
                </td>
                <td>
                    <a href="@Url.Action("Details", "Doctor", new { id = doctor.DoctorId })" class="btn btn-info">Details</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
